<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableHeader"
            android:weightSum="100">
            <TextView
                android:id="@+id/header_position"
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="#"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="10"/>

            <TextView
                android:id="@+id/header_teamname"
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="Team"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="50"
                android:layout_width="0dp"/>


            <TextView
                android:id="@+id/header_played"
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="M"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="8"
                android:layout_width="0dp"/>

            <TextView
                android:id="@+id/header_wins"
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="W"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="8"
                android:layout_width="0dp"/>


            <TextView
                android:id="@+id/header_ties"
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="T"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="8"/>

            <TextView
                android:id="@+id/header_losses"
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="L"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="8"/>

            <TextView
                android:background="@drawable/border"
                android:padding="5dp"
                android:text="P"
                android:id="@+id/header_points"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="8"/>
        </TableRow>
    </TableLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/LeaderBoardTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">


        </TableLayout>
    </ScrollView>
</LinearLayout>